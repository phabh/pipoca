<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/movieButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:hapticFeedbackEnabled="false"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/umb_movie"
        android:layout_margin="4dp"
        android:padding="0dp"
        android:background="@android:color/transparent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RatingBar
        android:id="@+id/popularity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_marginLeft="31dp"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="12dp"
        android:layout_alignBottom="@+id/movieButton"
        android:layout_alignLeft="@+id/movieButton"
        android:layout_alignStart="@+id/movieButton" />

    <RatingBar
        android:id="@+id/ratingMovie"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_alignTop="@+id/popularity"
        android:layout_alignRight="@+id/movieButton"
        android:layout_alignEnd="@+id/movieButton" />
</RelativeLayout>